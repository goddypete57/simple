<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Dark"
    tools:context=".Withdraw.DepositCoinsFragment">

    <TextView
        android:id="@+id/amount_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="N8,452.98"
        android:textColor="@color/white"
        android:textSize="@dimen/_27ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_13ssp"
        android:text="0.8934 BTC"
        android:textColor="@color/sky_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount_wallet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_409sdp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/deposit_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45sdp"
            android:text="Deposit Coins"
            android:textColor="@color/Light_White"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_153sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/scan"
            app:layout_constraintEnd_toEndOf="@+id/deposit_coins"
            app:layout_constraintStart_toStartOf="@+id/deposit_coins"
            app:layout_constraintTop_toBottomOf="@+id/deposit_coins" />

        <TextView
            android:id="@+id/wallet_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bc1qxy2kgdygjrsqtzq2n\n0yrf2493p83kkfjhx0wlh"
            android:textColor="@color/black"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:drawableStart="@drawable/ic_copy"
            android:drawablePadding="@dimen/_5sdp"
            android:text="Copy"
            android:textStyle="bold"
            android:textColor="@color/blue_lighter"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintStart_toStartOf="@+id/wallet_id"
            app:layout_constraintTop_toBottomOf="@+id/wallet_id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textStyle="bold"
            android:textColor="@color/blue_lighter"
            android:layout_marginTop="@dimen/_30sdp"
            android:drawableStart="@drawable/share"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="@+id/wallet_id"
            app:layout_constraintTop_toBottomOf="@+id/wallet_id" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_63sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:background="@drawable/styles"
        android:src="@drawable/ic_baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>